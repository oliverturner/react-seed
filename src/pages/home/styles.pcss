.main {
  display:         flex;
  justify-content: center;
  align-items:     center;

  width:           100%;
  height:          100%;
  background:      url('./images/bg.jpg') center no-repeat;
  background-size: cover;
}

.wrap {
  width:         500px;
  padding:       1em;
  border-radius: .3em;
  box-shadow:    0 0 20px rgba(0, 0, 0, .5);
  background:    rgba(255, 255, 255, .95);
}

:local(.body) {
  line-height: 1.4em;

  p {
    margin-bottom: 1em;

  }
}
